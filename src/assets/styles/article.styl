*
  margin 0
  padding 0
  box-sizing border-box
body
  font-size 400
a
  text-decoration none
#article-title-img
  height 400px
  position relative
  background-repeat no-repeat
  background-position center
  background-size cover
#article-title-text
  position absolute
  top 0
  left 0
  width 100%
  height 400px
  background-color rgba(0,0,0,.5)
#article-title-name
  color white
  width 680px
  height 84px
  margin 160px auto 0
  font-size 30px
  text-align center
#article-title-label
  width 680px
  border-bottom 1px solid rgba(255,255,255,.5)
  margin 0 auto
  padding 30px 0
  text-align center
  a
    color #a6a7a7
    font-size 13px
    text-decoration none
#article-title-sceneTagName
  display inline-block
  margin 0 10px
#article-title-tags
  display inline-block
  margin 0 10px
#article-title-sceneTagName div
  display inline-block
  margin 0 5px
#article-title-tags div
  display inline-block
  margin 0 5px
#article-title-sceneTagName>div:nth-child(1)
  width 8px
  height 8px
  border-radius 8px
#article-title-tags>div:nth-child(1)
  background-color darkgrey
  width 8px
  height 8px
  border-radius 8px
#writerMessage
  width 680px
  height 74px
  margin 0 auto
#writerAndTime
  float left
  a
    color white
    font-size 14px
    img
      vertical-align middle
    img:nth-child(1)
      width 40px
      height 40px
      border-radius 50%
      margin 15px
    span
      margin 0 5px 0 0
#writerTime
  color rgba(255,255,255,.7)
  padding-left 20px
  font-size 14px
#like-link
  float right
  a
    color #b8b9b9
    font-size 14px
    img
      vertical-align middle
    img:nth-child(3)
      padding-left 20px
.link
  line-height 70px
  margin 0 10px
#article-content
  width 670px
  margin 50px auto 20px
  img
    display block
    margin 0 auto
  p
    font-size 16px
    line-height 32px
    margin 16px 0
  strong
    font-weight 700

