.feed_list_bar
  font-size 15px
  overflow hidden
  margin-bottom 30px
  .feed_list_bar_left
    cursor pointer
    float left
  .feed_list_bar_right
    float right
i
  display inline-block
  width 16px
  height 16px
  vertical-align sub
  img
    width 100%
    height 100%
.feed_all_logo
  margin-right 3px
.feed_down_logo
  margin-left 3px
.feed_list_bar_right
  div
    float left
    margin-left 10px
    font-size 15px
.feed_right_font
  margin-left 7px
.feed_right_good_logo
  background url("../images/复选框.png")
  background-size 100% 100%
.feed_right_bad_logo
  background url("../images/复选框 (1).png")
  background-size 100% 100%
.zuo-feed
  min-height 815px
  margin-bottom: 18px;
  background-color white
  z-index: 400;
  position: relative;
  border 1px solid black
.zuo-feed_top
  padding: 10px 18px;
  height: 40px;
  position: relative;
  z-index: 1300;
  .zuo-feed-top-inner
    height 100%
    .owner-info
      float left
      height 100%
      .owner-avatar
        height 100%
        float: left
        img
          height 100%
          border-radius 50%
      .owner-name
        margin-top 10px
        padding-left: 10px
        float left
        a
          font-size: 14px;
          font-weight: 500;
          color: #272c2f;
          text-decoration none
    .feed-right-actions
      margin-top 10px
      float right
.feed-right-actions-icon
  display inline-block
  width 18px
  height 18px
  border-radius 50%
  border 1px solid #E1E2E2
  text-align center
  line-height 18px
  img
    width 14px
    height 12px
.feed-like-count
  padding-right 18px
  padding-left 10px
  font-size: 14px;
  line-height: 20px;
  color: #959697;
.feed-share-toggle
  display inline-block
  width 17px
  height 17px
  padding-right 18px
  img
    display: block;
    margin-top: 2px;
    width 100%
    height 100%
.icon-iconhomemore
  img
    width: 20px;
    height: 15px;
.feed-body-img
  width 100%
  height auto
.feed-content
  padding 18px 0 0
  .feed-text
    font-size 14px
    line-height: 22px;
    padding: 0 25px 18px;
    color: #595c5d;
  .feed-tags
    padding-left: 25px;
    padding-right: 25px;
    .icon-tag
      display inline-block
      width 8px
      height 8px
      border 1px solid transparent
      border-radius: 50%;
      vertical-align middle
    span
      margin-left 10px
      font-size 14px
      color #a6a7a7
  .feed-info
    margin: 0 auto;
    padding-top: 18px;
    padding-bottom: 3px;
    margin-top 10px
    border-top 1px solid #ECECEC
    border-bottom 1px solid #ECECEC
    width: 93%
    span
      padding-left: 8px;
      color: #a6a7a7;
      cursor: pointer;
      font-size 14px
  .add-comment
    color red
.icon-tag-name
  margin-right 10px
.feed-info-icon-message
  width 20px
  height 20px
  img
    width 100%
    height 100%
