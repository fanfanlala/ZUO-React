*
  margin 0
  padding:0
#outTier
  width 930px
  height 450px
#read-headline
  text-align center
  margin 30px 0
  font-size 20px
  font-weight 700
#read-headline-img>div:nth-child(2)
  margin 0 18px
.read
  position relative
  float left
.read img
  width 298px
  height 450px
  border-radius 4px
.read a
  text-decoration none
  color white
.read-content
  width 100%
  height 99%
  border-radius 4px
  position absolute
  left 0
  top: 0
  background-color rgba(0,0,0,0.3)
.read-content div
 margin 0 10px
.read-content>div:nth-child(1)
  position absolute
  bottom 50px
.read-content>div:nth-child(1)>div:nth-child(1)
  font-size 18px
  margin 20px 0
  font-weight 700
.read-content>div:nth-child(1)>div:nth-child(2)
  margin 20px 0
  font-size: 14px;
  font-weight: 400;
.read-content>div:nth-child(2)
  height 50px
  width 94%
  line-height 50px
  position absolute
  bottom 0
  border-top 1px solid rgba(255,255,255,0.3)

.read-content>div:nth-child(2)::after
  clear both
  content ''
  display block
.read-content>div:nth-child(2)>div:nth-child(1)
  width 10px
  height 10px
  border-radius 5px
  margin-top 22px
  float left
.read-content>div:nth-child(2)>div:nth-child(2)
  float left
.read-content>div:nth-child(2)>div:nth-child(2) a
  font-size 14px
.read-content>div:nth-child(2)>div:nth-child(3)
  float right
.read-content>div:nth-child(2)>div:nth-child(3) a
  font-size 12px
.read:hover .read-content
  background-color rgba(0,0,0,0.6)
  transition 500ms
#more-article
  width 930px
#more-headline
  text-align center
  margin 90px 0 30px 0
  font-size 20px
  font-weight 700




