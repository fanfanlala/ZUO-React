.zuo-detail-modal
  display none
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1001;
  background-color: rgba(39,44,47,.9);
.zuo-detail-body
  width: 850px;
  margin: 0 auto;
  position: relative;
.zuo-detail-content
  margin-top 40px
  width: 850px;
  min-height: 600px;
  border-radius: 4px;
  background-color: #fff
.icon-iconhomeclose
  font-size: 16px;
  color: #b8b9b9;
  cursor: pointer;
  position: absolute;
  top: 10px;
  right: -34px
.icon-iconhomeclose>img
  width 22px
  height 22px
.zuo-detail-container
  padding-top: 5px;
  padding-left: 18px;
  padding-bottom: 15px
.detail-left-part
  width 540px
  border 1px solid black
  float left
.detail-right-part
  width: 280px;
  height: 600px;
  position: relative
  border 1px solid black
  float right
.feed-top
  padding: 10px 0
.owner-info
  overflow hidden
.owner-avatar
  float left
  overflow hidden
.owner-avatar>img
  width 40px
  height 40px
  border-radius 50%
.owner-name
  margin-left: 10px;
  margin-top: 10px
  float right
.feed-right-actions
  margin-top 10px
  float right
.time
  display inline-block
  padding-left: 10px;
  color: #a6a7a7
.owner-name>a
  float left
  font-size: 14px;
  font-weight: 500;
  color: #272c2f
.share-toggle
  padding-right 10px
  float left
.share-toggle>img
  width 18px
  height 18px
.dropdown
  float right
.dropdown>img
  width 18px
  height 18px
.feed-image
  margin-top 5px
  border-radius: 4px;
  height: 540px
  position: relative;
  width: 100%;
  overflow: hidden;
  background-color: #eaeced
.feed-image>img
  width 100%
  height 100%
.feed-image:hover .feed-meng
  opacity .3
.feed-image:hover .feed-halo
  transform scale(1.1)
  border 3px solid #1fd7e2
.feed-image:hover .halo-text-box
  opacity 1
.is-like-tip-wrap
  margin-left 14px
  overflow hidden
.is-like-tip
  width 20px
  height 20px
  line-height 22px
  text-align center
  border-radius 50%
  border 1px solid #C6C7C8
  float left
.is-like-tip>img
  width 16px
  height 16px
  margin-top 2px
.like-tip
  float left
  color #C6C7C8
  font-size 14px
  margin-top: 1px;
  margin-left: 5px;
.like-count-right
  padding-right 20px
  float right
  color #C6C7C8
  font-size 14px
.like-users-container
  margin-top 15px
  padding-left: 15px;
  padding-right: 15px
.like-users-wrap
  position: relative;
  padding: 10px;
  background-color: #eaeced;
  border-radius: 4px;
  height: 40px;
.arrow-top
  position: absolute;
  right: 20px;
  top: -9px;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-bottom: 10px solid #eaeced
.like-users-wrap-avatar
  float left
  margin-right 5px
.like-users-wrap-avatar>img
  width 40px
  height 40px
  border-radius 50%
.like-users-wrap-addMore
  margin-top 8px
  margin-left 5px
.like-users-wrap-addMore>img
  width 25px
  height 25px
.detail-info
  max-height: 420px;
  overflow-y: auto;
  overflow-x: hidden
.detail-middle
  padding-left: 15px;
  padding-top: 15px;
  padding-right: 15px
.feed-text
  padding: 13px 0;
  border-top: 1px solid #ececec;
  word-wrap: break-word
  color: #595c5d
  font-size 14px




